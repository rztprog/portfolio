<div class="container">
  <!-- <h1>Blogs index</h1> -->
  <div class="blogs-nav">
    <form class="search-blogs-form">
      <input class="" type="search" placeholder="Search..." aria-label="Search" name="search" value="<%= params[:search] if params[:search] %>">
      <button class="search-blogs-button" type="submit">
        <i class="fa-solid fa-magnifying-glass"></i>
      </button>
    </form>
    <%= link_to "+ADD", new_blog_path, class: "add-blogs-button" %>
  </div>

  <div class="blogs-grid-index">
    <% @blogs.each do |blog| %>
    <div class="blog-card-container">
      <%= link_to edit_blog_path(blog), class: "edit-blog" do %>
        <i class="fa-regular fa-pen-to-square"></i>
      <% end %>
      <%= link_to blog_path(blog) do %>
        <div class="blogs-card-border">
          <div class="blogs-card">
            <p><%= blog.title %></p>
            <span>
            </span>
          </div>
        </div>
      <% end %>
    </div>
    <% end %>
  </div>
</div>
