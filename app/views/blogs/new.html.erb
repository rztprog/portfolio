<div class="container newList">
  <h1>New article</h1>

  <%= simple_form_for(@blog) do |f| %>
    <%= f.input :title %>
    <br>
    <%= f.input :post %>
    <br>
    <%= f.input :image, as: :file %>
    <br>
    <%= f.button :submit, "Create new article", class: "btn btn-primary mt-2" %>
  <% end %>

  </div>
</div>
